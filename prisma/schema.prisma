generator client {
  provider = "prisma-client-js"
  output = "./db.server.ts"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Comment {
  id        String   @id @default(uuid())
  message   String
  createdAt DateTime @default(now())
  movieId   String
}
